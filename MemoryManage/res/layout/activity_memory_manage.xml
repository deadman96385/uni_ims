<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<include android:id="@+id/title_memory" layout="@layout/title_two_button"/> 
    <ListView
        android:id="@+id/lv_memory_manager_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:divider="@color/white"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="@dimen/view_interval_space_small"
        android:layout_marginBottom="@dimen/view_interval_space_small"
        android:layout_below="@id/title_memory"
        android:layout_above="@+id/linear_memory_manager_bottom"/>
	<LinearLayout 
	    android:id="@+id/linear_memory_manager_bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/view_interval_space_small"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"
	    android:background="@color/bg_common">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="@string/free_memory"/>
	    <TextView 
	        android:id="@+id/free_memory"
	        android:textColor="@color/white"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/free_memory"/>
	</LinearLayout>
</RelativeLayout>